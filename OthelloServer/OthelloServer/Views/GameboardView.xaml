<UserControl x:Class="OthelloServer.Views.GameboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OthelloServer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Padding="10"
            Background="White">
        <Grid Background="Black">
            <Grid            
                Width="{Binding SquareWidth}"
                Height="{Binding SquareHeight}"
                Background="DarkGreen"
                >
            </Grid>
            <Label  HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Content="{Binding Index}" FontSize="{Binding SquareWidth}" Foreground="White"/>
        </Grid>
    </Border>

</UserControl>
